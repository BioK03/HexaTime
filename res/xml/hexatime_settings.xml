<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="hexatime_settings" >
 <PreferenceCategory android:title="Appearance" >
    <com.priyesh.hexatime.NoTitleListPref
        android:defaultValue="1"
        android:entries="@array/font_styles"
        android:entryValues="@array/font_values"
        android:key="FONT_STYLE"
        android:summary="Change clock typeface."
        android:title="Font style" />
    <com.priyesh.hexatime.NoTitleListPref
        android:defaultValue="1"
        android:entries="@array/clock_size_names"
        android:entryValues="@array/clock_size_values"
        android:key="CLOCK_SIZE"
        android:summary="Adjust dimensions of clock."
        android:title="Clock size" />
    <com.priyesh.hexatime.NoTitleListPref
        android:defaultValue="1"
        android:entries="@array/clock_alignment_names"
        android:entryValues="@array/clock_alignment_values"
        android:key="CLOCK_ALIGNMENT"
        android:summary="Choose where the clock is positioned."
        android:title="Clock alignment" />
    <com.priyesh.hexatime.NoTitleListPref
        android:defaultValue="1"
        android:entries="@array/clock_style_names"
        android:entryValues="@array/clock_style_values"
        android:key="CLOCK_STYLE"
        android:summary="Show or hide the number sign (#)"
        android:title="Clock style" />
</PreferenceCategory>
    <PreferenceCategory android:title="About" >
        <Preference
            android:summary="This app is written by Priyesh Patel."
            android:title="Developer" >
        </Preference>
        <Preference
            android:key="contact"
            android:summary="Send me an email."
            android:title="Contact" >
        </Preference>
        <Preference
            android:key="source"
            android:summary="View the apps code via GitHub."
            android:title="Source" >
        </Preference>
        <Preference
            android:key="donate"
            android:summary="Buy me a cookie."
            android:title="Donate" >
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>