<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MainActivityAnimator">
        <attr name="strokeWidth" format="float" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="phase" format="float" />
        <attr name="duration" format="integer" />
        <attr name="fadeFactor" format="float" />
        <attr name="waitRadius" format="dimension" />
        <attr name="arrowLength" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="FloatingActionButton">
        <attr name="drawable" format="integer"/>
        <attr name="color" format="color"/>
        <attr name="shadowRadius" format="float"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="shadowColor" format="integer"/>
    </declare-styleable>
    
    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean"></attr>
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="shadow" format="boolean"></attr>
    </declare-styleable>
    
    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference"></attr>
    </declare-styleable>
</resources>
